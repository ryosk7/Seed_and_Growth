.main.posts-new
  .container
    .card style="background-image: linear-gradient(-225deg, rgba(26,158,42,0.6) 0%, rgba(0,36,61,0.6) 50%), url('#{@post.picture if @post.picture?}')"
      .card-category
        h1
          = @post.user.email
      .card-description
        h1
          = @post.title
      .container
        .card-content
          h3
            = @post.content
    .first_iframe
      = @post.first_iframe
    h3.show_content
      = @post.article.html_safe
    - if current_user.id == @post.user.id
      = link_to '編集', edit_post_path
      = link_to '削除', post_path, method: :delete
    = link_to '戻る', posts_path


